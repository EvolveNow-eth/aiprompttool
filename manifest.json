{
  "manifest_version": 3,
  "name": "My Extension",
  "description": "A simple Chrome extension",
  "version": "1.0",
  "icons": [
    {
      "src": "icon.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "icon.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "icon.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "icon.png",
      "sizes": "128x128",
      "type": "image/png"
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
